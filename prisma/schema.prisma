// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongodb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    Int      @unique
  email     String   @unique
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Rooms     Room[]
  Invites   Invite[]
  Members   Member[]
}

model Room {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  roomId    Int      @unique
  owner     User     @relation(fields: [ownerId], references: [userId])
  ownerId   Int
  name      String
  isPublic  Boolean  @default(true)
  avatar    String?  @default("DEFAULT_AVATAR")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Invites   Invite[]
  Members   Member[]
}

model Invite {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  inviteId   Int      @unique
  slug       String   @unique
  room       Room     @relation(fields: [roomId], references: [roomId])
  roomId     Int
  inviter    User     @relation(fields: [inviterId], references: [userId])
  inviterId  Int
  expires_at DateTime
  isForEver  Boolean  @default(false)
  max_use    Int //0 == no limit
  uses       Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  Members    Member[]
}

model Member {
  id          String              @id @default(auto()) @map("_id") @db.ObjectId
  room        Room                @relation(fields: [roomId], references: [roomId])
  roomId      Int
  user        User                @relation(fields: [userId], references: [userId])
  userId      Int //member id or userId
  invite      Invite?             @relation(fields: [inviteId], references: [inviteId])
  inviteId    Int?
  permissions MemberPermissions[] @default([DEFAULT])
  nickname    String?
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
}

enum MemberPermissions {
  ADMINISTRATOR //All Perm
  MANAGE_MEMBERS
  MANAGE_ROOM
  MANAGE_INVITE
  MANAGE_STREAM
  DEFAULT
}
